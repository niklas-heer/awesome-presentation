@import url('http://code.ionicframework.com/ionicons/1.5.2/css/ionicons.min.css')

$_PrimaryColor = rgb(12,138,196,1)
$_SecondaryColor = rgb(42,43,57,1)

.ap-ribbon
  width 100%
  height 40vh
  background-color #3F51B5
  flex-shrink 0

.ap-main
  margin-top -35vh
  flex-shrink 0

.ap-header
  .mdl-layout__header-row
    padding-left 40px

.ap-container
  max-width 1600px
  width calc(100% - 16px)
  margin 0 auto

.ap-content
  width 900px
  border-radius 2px
  padding 80px 56px
  margin-bottom 80px

.ap-layout
  &.is-small-screen
    .ap-content
      padding 40px 28px

.ap-footer
  padding-left 40px
  a
    font-size 13px
    text-align center

.result_pin
  font-weight bold
  text-align center
  background-color rgba(0,230,118, 0.4) !important
  color #424242 !important

.result_pin_text
  color rgb(0,150,136) !important
  text-align center

form
  text-align center

.card_collection
  padding-left 5px
  padding-right 5px

h1
  display inline-block
  padding 0 15px
  position relative
  &:before
    right 100%
  &:after
    left 100%

h1:before,
h1:after
  background #ddd
  content ""
  display block
  height 1px
  position absolute
  top 50%
  width 400%

.container
  overflow hidden
  text-align center

footer
  a
    text-decoration none
    &:hover
      text-decoration underline
  .love
    margin-left 3px
    &:hover
      color alpha(red, 1)
      text-shadow none
  .love.active
    color alpha(red, 1)
    text-shadow none
  .name
    display inline-block
    padding 1px
    font-weight 500
    background-size: 200%;
    &:hover
      text-decoration none
      color $_SecondaryColor
      text-shadow none
    a
      color #9e9e9e
      &:hover
        color alpha(red, 1)
  .name.active
    text-decoration none
    color $_SecondaryColor
    text-shadow none
    a
      color alpha(red, 1)
