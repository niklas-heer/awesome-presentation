.ap-ribbon
  width 100%
  height 40vh
  background-color #3F51B5
  flex-shrink 0

.ap-main
  margin-top -35vh
  flex-shrink 0

.ap-header
  .mdl-layout__header-row
    padding-left 40px

.ap-container
  max-width 1600px
  width calc(100% - 16px)
  margin 0 auto

.ap-content
  border-radius 2px
  padding 80px 56px
  margin-bottom 80px

.ap-layout
  &.is-small-screen
    .ap-content
      padding 40px 28px

.ap-footer
  padding-left 40px
  a
    font-size 13px
    text-align center

.result_pin
  font-weight bold
  text-align center
  background-color rgba(0,230,118, 0.4) !important
  color #424242 !important

.result_pin_text
  color rgb(0,150,136) !important
  text-align center

form
  text-align center

.ap-card-square
  &.mdl-card
    width 320px
    height 320px
  & > .mdl-card__title
    color #fff
    background url('../assets/demos/dog.png') bottom right 15% no-repeat #46B6AC

